# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#get coords on the id /coords/id/1234

GET		/coords/								controllers.Application.getCoordsAll()
GET		/coords/id/:id							controllers.Application.getCoordsOnId(id: Long)
GET		/coords/x/gt/*anything					controllers.Application.getXCoordsGT(anything)
GET		/coords/y/gt/*anything					controllers.Application.getYCoordsGT(anything)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

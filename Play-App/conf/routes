# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/coords/:paramId									controllers.Application.respondCoordsId(paramId: Long)
GET		/coords/height/gt/:paramHeightGt					controllers.Application.respondForHeightGreaterThan(paramHeightGt: Long)
GET		/coords/height/lt/:paramHeightLt					controllers.Application.respondForHeightLessThan(paramHeightLt: Long)
GET 	/coords												controllers.Application.respondWithQueryParams()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
